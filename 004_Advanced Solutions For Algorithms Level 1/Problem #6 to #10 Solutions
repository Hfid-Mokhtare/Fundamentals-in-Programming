//Problem #7 :
#include <iostream>
#include <string>

using namespace std;

int ReadNum()
{
	int Num = 0;
	cout << "enter the number : ";
	cin >> Num;
	return Num;
}

float Calcul_Half_of_Num(int Num)
{
	return (float)Num / 2;
}


void PrintResult(int Num)
{
	string Result = "The Half of " + to_string(Num) + " is : " + to_string(Calcul_Half_of_Num(Num));
	cout << Result;
}

int main()
{
	PrintResult(ReadNum());

	return 0;
}

